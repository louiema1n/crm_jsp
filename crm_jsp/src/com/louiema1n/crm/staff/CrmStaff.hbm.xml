<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
    
<hibernate-mapping>
	<class name="com.louiema1n.crm.staff.CrmStaff" table="crm_staff">
		<id name="staffId">
			<generator class="uuid"></generator>
		</id>
		
		<property name="loginName"></property>
		<property name="total"></property>
		<property name="loginPwd"></property>
		<property name="staffName"></property>
		<property name="gender"></property>
		<property name="onDutyDate">
			<column name="onDutyDate" sql-type="datetime"></column>
		</property>
		<property name="postId"></property>
		
		<!-- [多个员工] 属于 [一个职务] -->
		<set name="crmPost">
			<key column="postId"></key>
			<one-to-many class="com.louiema1n.crm.post.domain.CrmPost"/>
		</set>
		
	</class>
</hibernate-mapping>